<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screens.FeedbackFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/feedback_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_feedback"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/label_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Nivel:"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/image_feedback"
            app:layout_constraintStart_toEndOf="@id/image_feedback"
            android:layout_marginStart="16dp"/>
        <TextView
            android:id="@+id/text_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Intermedio"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/image_feedback"
            app:layout_constraintStart_toEndOf="@id/label_difficulty"
            android:layout_marginStart="8dp"/>
        <TextView
            android:id="@+id/label_nro_exercises"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Total ejercicios:"
            android:textSize="18sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/text_difficulty"
            app:layout_constraintStart_toEndOf="@id/image_feedback"
            android:layout_marginStart="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/label_nro_exercises"
            app:layout_constraintStart_toEndOf="@id/label_nro_exercises"
            android:layout_marginStart="12dp"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:translationZ="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_feedback">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">
                <TextView
                    android:id="@+id/score_textview_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Score"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/score_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    tools:text="120 pts"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ProgressBar
                    android:id="@+id/progress_bar_score"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progress="80"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/score_textview" />
                <TextView
                    android:id="@+id/correct_textview_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Preguntas correctas"
                    android:paddingTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/progress_bar_score"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/correct_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    tools:text="6 preguntas"
                    android:paddingTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/progress_bar_score"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <ProgressBar
                    android:id="@+id/progress_bar_correct"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progress="80"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/correct_textview" />
                <TextView
                    android:id="@+id/incorrect_textview_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:paddingTop="8dp"
                    android:text="Preguntas incorrectas"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/progress_bar_correct"/>
                <TextView
                    android:id="@+id/incorrect_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:paddingTop="8dp"
                    tools:text="4 preguntas"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/progress_bar_correct"/>
                <ProgressBar
                    android:id="@+id/progress_bar_incorrect"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progress="80"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/incorrect_textview" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_view_detail"/>

        <Button
            android:id="@+id/restart_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Volver a empezar"/>



    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>